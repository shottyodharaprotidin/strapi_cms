{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "display_name": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "display_name",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "Avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "bio": {
      "type": "text",
      "default": "সত্যধারা প্রতিদিনের অফিসিয়াল নিউজ ডেস্ক।"
    },
    "role": {
      "type": "enumeration",
      "default": "editorial",
      "enum": [
        "editorial",
        "staff",
        "bureau",
        "guest",
        "agency"
      ]
    },
    "is_public": {
      "type": "boolean",
      "default": false
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "author"
    }
  }
}
